@model IEnumerable<BibliotecaMetropolis.Models.Autor>

@{
    ViewData["Title"] = "Index";
}

<h1>AUTORES</h1>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAutor">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdAutor">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAutor">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
