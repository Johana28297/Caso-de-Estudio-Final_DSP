@model BibliotecaMetropolis.Models.Recurso

@{
    ViewData["Title"] = "Crear Recurso";
}

<h1>Crear Recurso</h1>

<h4>Datos del Recurso</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AnnoPublic" class="control-label"></label>
                <input asp-for="AnnoPublic" class="form-control" type="number" />
                <span asp-validation-for="AnnoPublic" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Edicion" class="control-label"></label>
                <input asp-for="Edicion" class="form-control" />
                <span asp-validation-for="Edicion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" type="number" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PalabrasBusqueda" class="control-label"></label>
                <input asp-for="PalabrasBusqueda" class="form-control" />
                <span asp-validation-for="PalabrasBusqueda" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TipoRecurso" class="control-label"></label>
                <input asp-for="TipoRecurso" class="form-control" />
                <span asp-validation-for="TipoRecurso" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="InstitucionEducativa" class="control-label"></label>
                <input asp-for="InstitucionEducativa" class="form-control" />
                <span asp-validation-for="InstitucionEducativa" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Ciudad" class="control-label"></label>
                <input asp-for="Ciudad" class="form-control" />
                <span asp-validation-for="Ciudad" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FechaRegistro" class="control-label"></label>
                <input asp-for="FechaRegistro" class="form-control" type="date" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdEdit" class="control-label">Editorial</label>
                <select asp-for="IdEdit" class="form-control" asp-items="ViewBag.IdEdit">
                    <option value="">-- Seleccione una editorial --</option>
                </select>
                <span asp-validation-for="IdEdit" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdPais" class="control-label">País</label>
                <select asp-for="IdPais" class="form-control" asp-items="ViewBag.IdPais">
                    <option value="">-- Seleccione un país --</option>
                </select>
                <span asp-validation-for="IdPais" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Guardar Recurso" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}