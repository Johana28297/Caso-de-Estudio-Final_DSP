@model BibliotecaMetropolis.Models.Recurso

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Recurso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnnoPublic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnnoPublic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Edicion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Edicion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PalabrasBusqueda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PalabrasBusqueda)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoRecurso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoRecurso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InstitucionEducativa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InstitucionEducativa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ciudad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ciudad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaRegistro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Editorial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Editorial.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pais)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pais.Nombre)
        </dd>
    </dl>
</div>

<hr />
<h4>Etiquetas Asignadas</h4>
<dl class="row">
    @foreach (var recursoEtiqueta in Model.RecursoEtiquetas)
    {
        <dd class="col-sm-9">
            @recursoEtiqueta.Etiqueta.Nombre
        </dd>
        <dd class="col-sm-3">
            <form asp-action="QuitarEtiqueta" method="post">
                <input type="hidden" name="id" value="@recursoEtiqueta.Id" />
                <input type="submit" value="Quitar" class="btn btn-sm btn-danger" />
            </form>
        </dd>
    }
</dl>

<hr />
<h4>Agregar Nueva Etiqueta</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarEtiqueta" method="post">
            <input type="hidden" name="IdRec" value="@Model.IdRec" />
            <div class="form-group">
                <select name="IdEtiqueta" class="form-control" asp-items="ViewBag.IdEtiqueta"></select>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.IdRec">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>